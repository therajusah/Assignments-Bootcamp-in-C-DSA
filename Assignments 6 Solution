// 1. Write a program to calculate sum of first N natural numbers
#include <stdio.h>
int main() {
  int i, j;
  printf("Enter a Number");
  scanf("%d", &j);
  for (i = 1; i <= j; i++) {
    printf("\n%d", i + i);
  }
}

// 2. Write a program to calculate sum of first N even natural numbers
#include <stdio.h>
int main() {
  int i, k;
  printf("Enter a number");
  scanf("%d", &k);
  for (i = 0; i <= k; i++) {
    if (i % 2 == 0)
      printf("\n %d:", i + i);
  }
}
//  3. Write a program to calculate sum of first N odd natural numbers

#include <stdio.h>
int main() {
  int i, j;
  int sum = 0;
  printf("Enter a Number: ");
  scanf("%d", &j);
  for (int i = 1; i <= j; i++) {
    if (i % 2 == 0)
      sum = sum + i;
  }
  printf("\n%d", sum);
}

// 3. Write a program to calculate sum of first N odd natural numbers

#include <stdio.h>
int main() {
  int i, j;
  int sum = 0;
  printf("Enter a Number: ");
  scanf("%d", &j);
  for (int i = 1; i <= j; i++) {
    if (i % 2 != 0)
      sum = sum + i;
  }
  printf("\n%d", sum);
}

// 4. Write a program to calculate sum of squares of first N natural numbers
int main() {
  int i, j;
  int sum = 0;
  printf("Enter a Number: ");
  scanf("%d", &j);
  for (int i = 1; i <= j; i += 2) {
    sum += i;
  }
  printf("\n%d", sum);
}
// 5. Write a program to calculate sum of cubes of first N natural numbers

#include <stdio.h>
int main() {
  printf("Enter a number");
  int i, n, sum = 0;
  scanf("%d", &n);
  while (i <= n) {
    sum += i * i * i;
    i++;
  }

  printf("Sum is: %i\n", sum);
  return 0;
}
